<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:dither="true"
            android:shape="oval">
            <solid android:color="@color/search_button_pressed" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:dither="true"
            android:shape="oval">
            <size android:height="50dp"
                android:width="50dp" />
            <padding android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
            <solid android:color="@color/search_button" />
        </shape>
    </item>
</selector>